!!! 5
%html{lang: 'en'}
  %head
    %meta{charset: 'utf-8'}
    %title HAML & SASS Template
    %link{rel: 'stylesheet', href: 'css/normalize.css'}
    %link{rel: 'stylesheet', href: 'css/style.css'}
  %body
    %section
      %h2 To Do
      %span
        %h4 Due Date
        %input#dueDate{type:'text'}
      %span
        %h4 Task
        %input#task{type:'text'}
      %span
        %h4 Color
        %input#color{type:'text'}
      %span
        %input#addTask{type:'button', value:'Add Task'}
    .clear

    %section
      %h2 Task List
      %table
        %tr#heading
          %th Due Date
          %th Task
          %th Color
          %th Done?
          %th Remove
          %th Up/Down

    %script{src: "js/jquery-1.10.2.min.js"}
    %script{src: "js/underscore-min.js"}
    %script{src: "js/main.js"}
