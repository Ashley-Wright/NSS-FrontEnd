extends ../template/layout
include ../mixins/form-helper

block content
  .row
    .small-12.columns
      h1.subheader New Posts
  .row
    .small-2.columns
      a.button.small.radius.expand(href='/') Home
    .small-2.columns
      a.button.small.radius.expand(href='/posts') Posts
    .small-2.columns
      a.button.small.radius.expand.success(href='/posts/new') New
    .small-6.columns
  .row
    .small-12.columns
      form(action='/posts', method='post')
        fieldset
          legend New Post
          .row
            mixin field(4, 'title', 'Title', null, null, true)
            mixin field(4, 'author', 'Author')
            mixin field(4, 'date', 'Date', date)
          .row
            mixin field(6, 'tags', 'Tags')
            mixin field(6, 'image', 'Image')
          .row
            .small-12.columns
              label(for='content') Content:
              textarea#content(name='content')
          .row
            .small-2.columns.small-offset-8: a.button.radius.alert.small.expand(href='/posts') Cancel
            .small-2.columns: button.radius.success.small.expand(type='submit') Save Post