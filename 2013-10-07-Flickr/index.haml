%head
  %meta{charset: "utf-8"}
  %meta{name: "viewport", content: "width=device-width"}
  %title Foundation 4
  %link{rel: "stylesheet", href: "css/normalize.css"}
  %link{rel: "stylesheet", href: "css/foundation.css"}
  %link{rel: "stylesheet", href: "css/app.css"}
  %script{src: "js/vendor/custom.modernizr.js"}
%body
  .row
    .small-12.columns
      %h1 Flickr Slideshow
  .row
    .small-2.columns
      %input#query{type:'text', autofocus:true}
    .small-10.columns
      %input#search.button.radius.small{type:'button', value:'Search Flickr'}
      %input#saveSelected.button.radius.small.success{type:'button', value:'Save Selected'}
      %input#clearSelected.button.radius.small.alert{type:'button', value:'Clear Selected'}
      %input#clear.button.radius.small.alert{type:'button', value:'Clear All'}
  .row
    .small-8.columns
      %h4.subheader Search Photos
      #photos
    .small-4.columns
      %h4.subheader Saved Photos
      #saved-photos

  %script{src: 'js/vendor/jquery-1.10.2.js'}
  %script{src: 'js/vendor/foundation.min.js'}
  %script{src: 'js/vendor/underscore.js'}
  %script{src: 'js/app/app.js'}
