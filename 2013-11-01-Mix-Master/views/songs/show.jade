extends ../template/layout

block content
  .row
    .small-12.columns
      .showSong
        h1.subheader= song.title
        p: img(src=song.art)
        .right
          audio(src='/audios/#{song.filename}' , controls=true)
          p.showLyrics= song.lyrics
          ul
            each genre in song.genres
              li= genre.name
          p= song.createdAt
          span: a.button.tiny.radius(href='/songs/#{song.id}/edit') Edit
          form(action='/songs/#{song.id}', method='post')
            input(type='hidden', name='_method', value='delete')
            button.tiny.radius.alert(type='submit') Delete

